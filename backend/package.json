{
  "name": "home4strays-backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/start.ts",
    "start-dev": "ts-node-dev --respawn src/start.ts",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc --outDir ./dist && cp -r ./src/views ./src/utils ./src/public ./dist",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "test": "cross-env NODE_ENV=test vitest run",
    "test:watch": "cross-env NODE_ENV=test vitest",
    "test:coverage": "cross-env NODE_ENV=test vitest run --coverage",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@types/change-case": "^0.0.30",
    "@types/cors": "^2.8.18",
    "@types/i18n": "^0.13.12",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "@types/pg-format": "^1.0.5",
    "argon2": "^0.41.1",
    "bcrypt": "^5.1.1",
    "buffer-equal-constant-time": "^1.0.1",
    "change-case": "^5.4.4",
    "class-transformer": "^0.5.1",
    "console-log-colors": "^0.5.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-winston": "^4.2.0",
    "express-zod-openapi-autogen": "^6.0.0",
    "fs": "^0.0.1-security",
    "hexoid": "^2.0.0",
    "http-errors": "~1.6.3",
    "i18n": "^0.15.1",
    "jsonwebtoken": "^9.0.2",
    "jwa": "^2.0.0",
    "minio": "^8.0.5",
    "morgan": "~1.9.1",
    "multer": "^1.4.5-lts.2",
    "node-emoji": "^2.2.0",
    "nodemailer": "^6.10.1",
    "pg": "^8.14.1",
    "pg-error-enum": "^1.0.2",
    "pg-format": "^1.0.4",
    "pug": "~3.0.3",
    "swagger-ui-express": "^5.0.1",
    "template-file": "^6.0.1",
    "translate": "^3.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.14",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^1.4.0",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2",
    "vitest": "^1.6.1"
  },
  "vitest": {
    "testEnvironment": "node",
    "exclude": [
      "**/node_modules/**",
      "**/dist/**",
      "**/src/database/**"
    ],
    "testTimeout": "30000",
    "hookTimeout": "60000",
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "json",
        "html"
      ],
      "exclude": [
        "**/node_modules/**",
        "**/dist/**",
        "**/src/database/**"
      ],
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 90
    }
  },
  "lint-staged": {
    "*.{js,ts,css,md,json}": "prettier --write"
  }
}
